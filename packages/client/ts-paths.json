{
  "compilerOptions": {
    "paths": {
      "@api": ["api"],
      "@components/*": ["components/*"],
      "@config": ["config"],
      "@helpers/*": ["helpers/*"],
      "@hooks": ["hooks"],
      "@hooks/*": ["hooks/*"],
      "@lib": ["lib"],
      "@lib/*": ["lib/*"],
      "@pages": ["pages"],
      "@pages/*": ["pages/*"],
      "@style": ["style"],
      "@style/*": ["style/*"],
      "@globalTypes": ["globalTypes"],
      "@globalTypes/*": ["globalTypes/*"]
    },
    "baseUrl": "./src"
  }
}
