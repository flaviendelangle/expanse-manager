{
  "compilerOptions": {
    "target": "ES2018",
    "module": "commonjs",
    "lib": ["es2018", "esnext"],
    "allowJs": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "outDir": "dist",
    "moduleResolution": "node",
    "baseUrl": ".",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*", "local/**/*"],
  "exclude": ["./node_modules"]
}
