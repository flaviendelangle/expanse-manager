    "bcrypt": "^5.0.0",
    "class-validator": "^0.13.1",
    "dataloader": "^2.0.0",
    "date-fns": "^2.17.0",
    "graphql": "^15.5.0",
    "graphql-scalars": "^1.7.0",
    "jsonwebtoken": "^8.5.1",
    "knex": "^0.21.17",
    "koa": "^2.13.1",
    "koa-bodyparser": "^4.3.0",
    "koa-jwt": "^4.0.0",
    "objection": "^2.2.14",
    "reflect-metadata": "^0.1.13",
    "sqlite3": "^5.0.1",
    "type-graphql": "^1.1.1"
  },
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/jsonwebtoken": "^8.5.0",
